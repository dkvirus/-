page{
  height: 100%;
  width: 100%;
}
.container{
  height: 60%;
}
.row-title{
  width: 100%;
  display: flex;
  height: 8%;
}
.row-content{
  width: 100%;
  display: flex;
  height: 46%;
}
.text-title{
  background-color: #9E9933;
  text-align: center;
  color: black;
}
.urgent{
  display: flex;
  align-items: center;
}
.column6{
  width: 6%;
}
.column47{
  width: 47%;
  position: relative;
  padding: 10rpx;
}
.column47 text{
  position:relative;
  z-index: 999;
}

.first{
  background-color: red;
}
.second{
  background-color: #F5B81D;
}
.third{
  background-color: #E5DB17;
}
.fourth{
  background-color: #EFEED8;
}

.annotation{
  height: 40%;
  background-color: #F7F7F7;
  padding-left: 20rpx;
  position: relative;
}
.annotation text{
  color: #D0D0D1;
}
text{
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 14px;
}
.clear{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  border: 1px solid black;
  border-radius: 50%;
  padding: 10rpx;
  background-color: #8585BB;
}
.tip{
  color: #C6C6DF;
  font-size: 16px;
  position: absolute;
  top: 40%;
  right: 40%;
  z-index: 1;
}